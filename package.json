{
  "name": "tslox",
  "version": "0.0.1",
  "scripts": {
    "start": "parcel --target website",
    "build": "parcel build --target website",
    "compiler": "parcel build --target compiler --no-optimize --no-scope-hoist && node dist/main.js",
    "generate-ast": "parcel build --target ast-generator --no-optimize --no-scope-hoist && node dist/generate-ast.js && npm run format",
    "format": "prettier --write .",
    "ci": "npm run lint && npm run check && npm test",
    "lint": "eslint && prettier --check .",
    "check": "tsc --noEmit",
    "test": "jest"
  },
  "targets": {
    "website": {
      "source": "src/website/index.html",
      "context": "browser"
    },
    "compiler": {
      "source": "src/compiler/main.ts",
      "context": "node"
    },
    "ast-generator": {
      "source": "bin/generate-ast.ts",
      "context": "node"
    }
  },
  "engines": {
    "node": ">= 19"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "jest": "^29.3.1",
    "parcel": "^2.8.2",
    "path-browserify": "^1.0.1",
    "prettier": "^2.8.1",
    "process": "^0.11.10",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
