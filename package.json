{
  "name": "tslox",
  "version": "0.0.1",
  "scripts": {
    "start": "node dist/main.js",
    "watch": "esbuild src/main.ts --outfile=dist/main.js --bundle --platform=node --sourcemap --watch",
    "build": "esbuild src/main.ts --outfile=dist/main.js --bundle --platform=node --sourcemap",
    "lint": "eslint && prettier --check .",
    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "ci": "npm run lint && npm run check"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "esbuild": "0.16.13",
    "eslint": "^8.31.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  }
}
