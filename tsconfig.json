{
  "compilerOptions": {
    "lib": ["es2022", "DOM"],
    "module": "ES2022",
    "target": "ES2022",
    "jsx": "react",

    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "isolatedModules": true
  },
  "include": ["src/**/*", "tests/**/*"]
}
